#!/bin/bash
#----------------------------------------------------------------------
# Don't do anything when not running interactively
#----------------------------------------------------------------------
[ -z "$PS1" ] && return
#-------------------------------------------------------------------------------
# Color for Dark Terminal Themes
# http://osxdaily.com/2012/02/21/add-color-to-the-terminal-in-mac-os-x/
#-------------------------------------------------------------------------------
export CLICOLOR=1
export LSCOLORS=GxFxBxDxCxegedabagacad
[[ -n "$DISPLAY" && "$TERM" = "xterm" ]] && export TERM=xterm
alias ct='~/git/dotfiles/color/base16-shell/colortest'
source ~/git/dotfiles/color/base16-shell/base16-shapeshifter.dark.sh
#-------------------------------------------------------------------------------
# Use vim keybinds
#-------------------------------------------------------------------------------
#set -o vi

#-------------------------------------------------------------------------------
# Personal aliases
#-------------------------------------------------------------------------------
# ls
alias la='ls -A'
alias ll='ls -lahG'

# General
alias h='history'
alias cls='clear'
alias ds='~/git/smart-device-sw/tools/bin/dev-shell'
alias ci='fpbuild exec -- cabal install'
alias et='emacsclient -t'
alias ec='emacsclient -c'
alias encrypt='~/git/dotfiles/encrypt'
alias decrypt='~/git/dotfiles/decrypt'

# Grep.
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias grep='grep --color=auto'
#-------------------------------------------------------------------------------
# File & String related functions
#-------------------------------------------------------------------------------
function ff() { find . -type f -iname ${1}  -print ; }
function ffl() { find . -type f -iname ${1} -ls ; }
function ffr() { find . -name ${1} -exec rm -rf {} ; }

#-------------------------------------------------------------------------------
# Prompt
#-------------------------------------------------------------------------------
export PS1='\[\033[01;31m\]\u\[\033[00m\]\[\033[01;33m\]@\[\033[00m\]\[\033[01;34m\]\h\[\033[00m\]\[\033[01;32m\]:\[\033[00m\]\[\033[01;35m\]\w\[\033[00m\]\[\033[01;36m\]\n\$\[\033[00m\] '

#----------------------------------------------------------------------
# Load RVM into a shell session *as a function*
#----------------------------------------------------------------------
PATH=$PATH:$HOME/.rvm/bin # Add RVM to PATH for scripting
[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"

#----------------------------------------------------------------------
# /usr/local/bin has precedence
#----------------------------------------------------------------------
PATH=/usr/local/bin:$PATH
PATH=$PATH:/Users/Gary/Library/Haskell/bin
PATH=$PATH:~/.cabal/bin

#----------------------------------------------------------------------
# Disable featrues / programs running on OSX.
#----------------------------------------------------------------------
function msa() { Launchctl remove com.microsoft.SyncServicesAgent ; }
function pah() { defaults write -g ApplePressAndHoldEnable -bool false ; }

#----------------------------------------------------------------------
# Set terminal title.
#----------------------------------------------------------------------
function title() { echo -n -e "\033]0;$1\007"; }
