# ------------------------------------------------------------------------------
# Set base16 color.  Mom and Dad a simple tribute to my parents.
# ------------------------------------------------------------------------------
function mom() {
  base16Color $1 dark
}
function dad() {
  base16Color $1 light
}
function ct() {
  cd ~/git/color/base16-shell && ./colortest && cd -
}
function base16Color() {
  source ~/git/color/base16-shell/scripts/base16-$1-$2.sh
  echo "Base16 color: " $1 $2
}

