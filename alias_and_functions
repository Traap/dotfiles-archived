  alias latexrun='${HOME}/git/latexrun/latexrun'
fi 

# ------------------------------------------------------------------------------
# iTerm2 shell integration => https://www.iterm2.com/
# ------------------------------------------------------------------------------
if [[ -f ${HOME}/.iterm2_shell_integration.bash ]]; then
  source ${HOME}/.iterm2_shell_integration.bash
fi

# ------------------------------------------------------------------------------
# Ruby Gem => https://rubygems.org/
# ------------------------------------------------------------------------------
