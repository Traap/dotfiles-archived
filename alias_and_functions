  export PATH="${HOME}/.cabal/bin:${PATH}"
  export PATH="${HOME}/Library/Haskell/bin:${PATH}"
  alias ci='cabal install'
  alias cif='cabal install --force-reinstalls'
  alias cemacs='emacs -Q -l ${HOME}/git/emacs-haskell-config/init.el'
  alias cls='clear'gg
fi

