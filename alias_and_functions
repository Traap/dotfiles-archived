# ------------------------------------------------------------------------------
# spath function tells me each part of my current path.
# ------------------------------------------------------------------------------
spath() {
  echo $PATH | sed -n 1'p' | tr ':' '\n' | while read word; do
    echo $word
  done
}

# ------------------------------------------------------------------------------
# master moves me to master and shows me a few commits. 
# ------------------------------------------------------------------------------
br() {
  git co $1
}
master() {
  br master
  clear
  git logg -15
}

